@{
    ViewData["Title"] = "Lakeview ILS";
}

<h3 class="text-center">@ViewData["Title"]</h3>

<div class="mdl-grid flexAllow">
    <div class="mdl-cell mdl-cell--6-col mdl-cell--4-col-tablet mdl-shadow--2dp indexCard">
        <div class="demo-card-square mdl-card mdl-shadow--2dp cContainer">
            <div class="mdl-card__title mdl-card--expand" id="catalog">
                <h2 class="mdl-card__title-text homeLabel">Library catalog</h2>
            </div>
            <div class="mdl-card__supporting-text">
                View and manage library assets.
            </div>
            <div class="mdl-card__actions mdl-card--border">
                <a class="mdl-button mdl-button--colored" asp-controller="Catalog" asp-action="Index">View catalog</a>
            </div>
        </div>
        <div class="Out"><span>Your Lakeview library card</span></div>
    </div>
    <div class="mdl-cell mdl-cell--6-col mdl-cell--4-col-tablet mdl-shadow--2dp indexCard">
        <div class="demo-card-square mdl-card mdl-shadow--2dp cContainer">
            <div class="mdl-card__title mdl-card--expand" id="patrons">
                <h2 class="mdl-card__title-text homeLabel">Patrons</h2>
            </div>
            <div class="mdl-card__supporting-text">
                View and manage library patron data.
            </div>
            <div class="mdl-card__actions mdl-card--border">
                <a class="mdl-button mdl-button--colored" asp-controller="Patron" asp-action="Index">View patrons</a>
            </div>
        </div>
        <div class="Out"><span>Your Lakeview library card</span></div>
    </div>
    <div class="mdl-cell mdl-cell--6-col mdl-cell--4-col-tablet mdl-shadow--2dp indexCard">
        <div class="demo-card-square mdl-card mdl-shadow--2dp cContainer">
            <div class="mdl-card__title mdl-card--expand" id="branches">
                <h2 class="mdl-card__title-text homeLabel">Branches</h2>
            </div>
            <div class="mdl-card__supporting-text">
                View and manage Lakeview branches.
            </div>
            <div class="mdl-card__actions mdl-card--border">
                <a class="mdl-button mdl-button--colored" asp-controller="Branch" asp-action="Index">View branches</a>
            </div>
        </div>
        <div class="Out"><span>Your Lakeview library card</span></div>
    </div>
</div>