@model asp.net_core3_library_application.Models.PatronModels.PatronIndexModel

@{ 
    ViewBag.Title = "Patron index";
}

<h3>@ViewBag.Title</h3>

<div id="patronIndex">
    <table class="mdl-data-table mdl-js-data-table mdl-data-table--selectable mdl-shadow--2dp customTable" id="patronIndexTable">
        <thead>
            <tr>
                <th>Profile link</th>
                <th>Last name</th>
                <th>First name</th>
                <th>Library card id</th>
                <th>Overdue fees</th>
                <th>Home library</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var patron in Model.Patrons)
            {
                <tr>
                    <td><a asp-controller="Patron" asp-action="Detail" asp-route-id="@patron.Id">Profile</a></td>
                    <td>@patron.LastName</td>
                    <td>@patron.FirstName</td>
                    <td>@patron.LibraryCardId</td>
                    <td>@patron.OverdueFees</td>
                    <td>@patron.HomeLibraryBranch</td>
                </tr>
            }
        </tbody>
    </table>
</div>